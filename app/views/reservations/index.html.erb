<div class='container'>
  <div class='col-md-12'>
    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th> Hor√°rio </th>

          <% @week.each do |day| %>
            <th> <%= l(day, format: '%A %d/%m/%y') %> </th> 
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% (6..23).each do |time| %>
          <tr>
            <td> <%= "#{time}:00" %> </td>

            <% @week.each do |day| %>
              <td> 
                <% if Reservation.has_reservation?(time, day) %>
                  Reservado
                <% else %>
                  <%= link_to 'Reservar', '#', data: { time: time, date: I18n.l(day) } %>
                <% end %>
              </td>
            <% end %>
          </tr> 
        <% end %>
      </tbody>

    </table>

  </div>
</div>
