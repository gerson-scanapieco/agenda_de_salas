<div class='container'>
  <div class='col-md-12'>
    <table class='table table-striped table-hover reservations-table'>
      <thead>
        <tr>
          <th> Hor√°rio </th>

          <% @week.each do |day| %>
            <th> <%= l(day, format: '%A %d/%m/%y') %> </th> 
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% (6..23).each do |time| %>
          <tr>
            <td> <%= "#{time}:00" %> </td>

            <% @week.each do |day| %>
              <td data-time=<%= time %> data-date=<%= I18n.l(day) %> >
                <%= reservation_entry(@reservations, time, day) %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>

    </table>

  </div>
</div>
