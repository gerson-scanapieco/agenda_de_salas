<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <h2>Editar <%= resource.model_name.human %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Aguardando confirmação para: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, autocomplete: "off", hint: "deixe em branco se não quiser alterar", required: false %>
        <%= f.input :password_confirmation, required: false %>
        <%= f.input :current_password, hint: "precisamos da sua senha atual para confirmar as alterações", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Salvar alterações" %>
      </div>
    <% end %>

    <h3> Cancelar minha conta </h3>

    <p>Não está feliz? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

    <%= link_to "Voltar", :back %>

  </div>
</div>
