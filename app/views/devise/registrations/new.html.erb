<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <h2>Criar conta</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true, label: 'Senha', hint: ("#{@minimum_password_length} caracteres no mÃ­nimo" if @validatable) %>
        <%= f.input :password_confirmation, label: 'Confirme sua senha', required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Criar conta" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
